@model IEnumerable<QLVTFinal.Models.SubCategory>

@{
    ViewBag.Title = "Quản lý danh mục con";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Quản lý danh mục con</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Danh mục con
        </th>
        <th>
            Danh mục cha
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nameSubCategory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.nameCategory)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.idSubCategory }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.idSubCategory }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.idSubCategory })
            </td>
        </tr>
    }

</table>

@Html.ActionLink("Mục đã xóa", "Recycle")
